{
    "image": "mcr.microsoft.com/devcontainers/base:alpine",
    "customizations": {
        "vscode": {
            "extensions": [
                "aaron-bond.better-comments",
                "eamodio.gitlens",
                "GitHub.vscode-pull-request-github",
                "jdsteinbach.custom-presentation-mode",
                "hediet.vscode-drawio",
                "oderwat.indent-rainbow",
                "seunlanlege.action-buttons",
                "usernamehw.errorlens",
                "vsls-contrib.gitdoc",
                "yzhang.markdown-all-in-one",
                "ms-vscode.live-server"
            ],
            "settings": {
                "gitlens.showWhatsNewAfterUpgrades": false,
                "gitlens.showWelcomeOnInstall": false,
                "editor.wordWrap": "on",
                "editor.inlayHints.enabled": "off",
                "editor.fontSize": 16,
                "editor.rulers": [
                    120
                ],
                "editor.tokenColorCustomizations": {
                    "textMateRules": [
                        {
                            "scope": "comment",
                            "settings": {
                                "fontStyle": "italic"
                            }
                        }
                    ]
                },
                "gitdoc.commitValidationLevel": "none",
                "gitdoc.enabled": true,
                "workbench.colorTheme": "Default Light Modern",
                "actionButtons": {
                    "commands": [
                        {
                            "cwd": "${workspaceFolder}",
                            "name": "$(pencil)",
                            "tooltip": "Format document",
                            "useVsCodeApi": true,
                            "command": "editor.action.formatDocument"
                        },
                        {
                            "name": "$(terminal-view-icon)",
                            "tooltip": "New Terminal",
                            "useVsCodeApi": true,
                            "command": "workbench.action.terminal.newInActiveWorkspace"
                        },
                        {
                            "name": "$(terminal-kill)",
                            "tooltip": "Kill All Terminals",
                            "useVsCodeApi": true,
                            "command": "workbench.action.terminal.killAll"
                        },
                        {
                            "name": "$(eye)",
                            "tooltip": "Kaiako Mode",
                            "useVsCodeApi": true,
                            "command": "extension.customPresentationMode"
                        }
                    ],
                    "defaultColor": "none",
                    "reloadButton": "â†»",
                    "loadNpmCommands": false
                },
                "customPresentationMode.backup": {
                    "editor.fontSize": 16,
                    "terminal.fontSize": 16
                },
                "customPresentationMode.overrides": {
                    "editor.fontSize": 24,
                    "terminal.integrated.fontSize": 24,
                    "workbench.colorTheme": "Default Light Modern",
                    "editor.fontWeight": "normal"
                }
            }
        }
    }
}